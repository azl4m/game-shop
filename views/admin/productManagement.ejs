<%- include("../partials/admin/header.ejs")%>
<div id="page-wrapper">
   <div class="header">
      <h1 class="page-header">Product Management</h1>
      <ol class="breadcrumb">
         <li><a href="/admin/">Products</a></li>
         <li class="active">Product Management</li>
      </ol>
   </div>
   <div id="page-inner">
      <div class="row">
         <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="card">
               <div class="card-action">Products List</div>
               <div class="card-content">
                  <div class="table-responsive">
                     <div class="row">
                        <div class="col-sm-6">
                           <div id="dataTables-example_filter" class="dataTables_filter">
                              <form action="" method="get">
                                 <label for="s">Search:      </label><input
                                    type="search"
                                    class="form-control input-sm"
                                    aria-controls="dataTables-example"
                                    name="search"
                                    id="search"
                                    />
                                 <input type="submit" value="Search">
                              </form>
                           </div>
                        </div>
                     </div>
                     <table
                        class="table table-striped table-bordered table-hover"
                        id="dataTables-example"
                        >
                        <thead>
                           <tr>
                              <th>Name</th>
                              <th>Price</th>
                              <th>Edit</th>
                           </tr>
                        </thead>
                        <tbody>
                            <% if (typeof data !== 'undefined') { %>
                                <% for (let i = 0; i < data.length; i++) { %>
                                    <tr class="odd gradeX">
                                        <td><%= data[i].productName %></td>
                                        <td><%= data[i].price %></td>
                                        <td class="">
                                          <button class="btn"><a href="/admin/editProduct?id=<%=data[i]._id%>">Edit Product Details</a></button>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                         </tbody>
                     </table>
                  </div>
               </div>
            </div>
            <!--End Advanced Tables -->
         </div>
      </div>
      <div class="col-sm-6">
         <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
            <ul class="pagination">
               <% if(typeof totalPages !== 'undefined'){
                %>
                <% for(let i = 1;i<totalPages.length;i++){%>
                    <li class="page-item paginate_button <%=(i===currentPage) ? 'active' : '' %>" aria-controls="dataTables-example" tabindex="0"><a href=">page=<%=i%>"><%=page%></a></li>
                <%}%>
               <%}%>
               
            </ul>
         </div>
      </div>
      <%- include("../partials/admin/footer.ejs")%>
   </div>
</div>