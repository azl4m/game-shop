    text-align: center;
    margin-bottom: 20px;
  }

  .report-table {
    width: 100%;
    border-collapse: collapse;
  }

  .report-table th,
  .report-table td {
    padding: 10px;
    border: 1px solid #ddd;
    text-align: center;
