<%- include("../partials/admin/header.ejs")%>
<div id="page-wrapper">
   <div class="header">
      <h1 class="page-header">Category Management</h1>
      <ol class="breadcrumb">
         <li><a href="/admin/">Dashboard</a></li>
         <li class="active">Category Management</li>
      </ol>
   </div>
   <div id="page-inner">
      <div class="row">
         <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="card">
               <div class="card-action">Coupon List</div>
               <div class="card-content">
                  <div class="table-responsive">
                     <div class="row">
                        <div class="col-sm-6">
                           <div id="dataTables-example_filter" class="dataTables_filter">
                              <form action="" method="get">
                                 <label for="s">Search:      </label><input
                                    type="search"
                                    class="form-control input-sm"
                                    aria-controls="dataTables-example"
                                    name="search"
                                    id="search"
                                    value="<%=searchQuery%>"
                                    />
                                 <input type="submit" value="Search">
                              </form>
                           </div>
                        </div>
                     </div>
                     <table
                        class="table table-striped table-bordered table-hover"
                        id="dataTables-example"
                        >
                        <thead>
                           <tr>
                              <th>Code</th>
                              <th>Edit Coupon Details</th>
                              <th>Activate/De-activate Coupon</th>
                           </tr>
                        </thead>
                        <tbody>
                            <% if (typeof data !== 'undefined') { %>
                                <% for (let i = 0; i < data.length; i++) { %>
                                    <tr class="odd gradeX">
                                        <td><%= data[i].code %></td>
                                        <td class="">
                                            
                                            <button class="btn-danger">
                                                <a style="text-decoration: none; color: rgb(255, 255, 255);" href="/admin/editCoupon?id=<%= data[i]._id %>">EDIT</a>
                                            </button>
                                        </td>
                                        <td class="">
                                            
                                          <% if (data[i].isActive === false) { %>
                                              <button class="btn-danger">
                                                  <a style="text-decoration: none; color: rgb(255, 255, 255);" href="/admin/activateCoupon?id=<%= data[i]._id %>">Activate Coupon</a>
                                              </button>
                                          <% } else { %>
                                              <button class="btn">
                                                  <a style="text-decoration: none; color: rgb(255, 255, 255);" href="/admin/deactivateCoupon?id=<%= data[i]._id %>">De-activate Coupon</a>
                                              </button>
                                          <% } %>
                                      </td>
                                      <td>
                                       <button class="btn-danger" onclick="deleteCoupon('<%=data[i]._id%>')">Delete</button>
                                      </td>
                                    </tr>
                                <% } %>
                            <% } %>
                         </tbody>
                     </table>
                  </div>
               </div>
            </div>
            <!--End Advanced Tables -->
         </div>
      </div>
      <div class="col-sm-6">
         <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
            <ul class="pagination">
               <% if(typeof totalPages !== 'undefined'){
                %>
                <% for(let i = 1;i<=totalPages;i++){%>
                    <li class="page-item paginate_button <%=(i===currentPage) ? 'active' : '' %>" aria-controls="dataTables-example" tabindex="0"><a href="?page=<%=i%>"><%=i%></a></li>
                <%}%>
               <%}%>
               
            </ul>
            <script>
               function deleteCoupon(id){
                  const confirmation = confirm("Do you really want to delete this category ?")
                  if(confirmation){
                     window.location.href = "/admin/deleteCoupon?id="+id
                  }
               }
            </script>
         </div>
      </div>
   </div>
</div>

<%- include("../partials/admin/footer.ejs")%>
