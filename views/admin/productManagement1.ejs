<%- include("../partials/admin/header.ejs")%>
<div class="pm-body">
    <div class="login-container" style="padding-top: 50px; padding-bottom: 50px;">
        <div class="pm-container">
            <h2 class="pm-heading">Add New Product</h2>
            <form class="pm-form" action="/admin/add-product" method="POST" enctype="multipart/form-data">
              <label class="pm-label" for="pm-productName">Product Name</label>
              <input class="pm-input" type="text" id="pm-productName" name="productName" required>
    
              <label class="pm-label" for="pm-productName">Product Name</label>
              <input class="pm-input" type="text" id="pm-productName" name="productName" required>
        
              <label class="pm-label" for="pm-description">Description</label>
              <textarea class="pm-textarea" id="pm-description" name="description" rows="4" required></textarea>
        
              <label class="pm-label" for="pm-images">Product Images (Minimum 3)</label>
              <input class="pm-input-file" type="file" id="pm-images" name="images" accept="image/*" multiple required>
        
              <div class="pm-variant-group">
                <h3 class="pm-variant-heading">Variants</h3>
                <label class="pm-label" for="pm-version">Version</label>
                <input class="pm-input" type="text" id="pm-version" name="variant[0][version]" required>
                
                <div class="pm-form-group">
                    <label class="pm-form-label" for="stock">Stock</label>
                    <input class="pm-form-input" type="number" id="stock" name="variant[stock]" required>
                </div>
        
                <label class="pm-label">Platforms</label>
                <div class="pm-checkbox-group">
                  <label class="pm-checkbox-label" for="pm-platformPC">
                    <input type="checkbox" id="pm-platformPC" name="variant[0][platforms][]" value="PC">
                    PC
                  </label>
                  <label class="pm-checkbox-label" for="pm-platformPS5">
                    <input type="checkbox" id="pm-platformPS5" name="variant[0][platforms][]" value="PS5">
                    PS5
                  </label>
                  <label class="pm-checkbox-label" for="pm-platformPS6">
                    <input type="checkbox" id="pm-platformPS6" name="variant[0][platforms][]" value="PS6">
                    PS6
                  </label>
                  <label class="pm-checkbox-label" for="pm-platformXbox">
                    <input type="checkbox" id="pm-platformXbox" name="variant[0][platforms][]" value="Xbox">
                    Xbox
                  </label>
                  <label class="pm-checkbox-label" for="pm-platformSteam">
                    <input type="checkbox" id="pm-platformSteam" name="variant[0][platforms][]" value="Steam">
                    Steam
                  </label>
                </div>
              </div>
              <label class="pm-label" for="pm-productName">Price</label>
              <input class="pm-input" type="number" id="pm-productName" name="price" required>
    
    
              <button class="pm-button" type="submit">Add Product</button>
            </form>
          </div>
    </div>
    
</div>


    


<%- include("../partials/admin/footer.ejs")%>