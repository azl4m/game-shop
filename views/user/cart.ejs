<%- include("../partials/user/header.ejs")%>

<div class="small-container cart-page">
    <table>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    
            <%for(let i=0;i<items.length;i++){%>
                <tr>
            <td>
                <div class="cart-info">
                    <img src="<%=items[i].images[0]%>" alt="<%=items[i].productName%>">
                    <div>
                        <p><%=items[i].productName%></p>
                        <small></small>
                        <br>
                        <a href="">Remove</a>
                    </div>
                </div>
            </td>
            <td><input type="number" value="<%=items[i].quantity%>"></td>
            <td><%=items[i].price%></td>
        </tr>
            <%}%>

    </table>
    <div class="total-price">
        <table>
            <tr>
                <td>Subtotal</td>
                <td>$200.00</td>
            </tr>
            <tr>
                <td>Tax</td>
                <td>$35.00</td>
            </tr>
            <tr>
                <td>Total</td>
                <td>$230.00</td>
            </tr>
        </table>
    </div>
</div>

<%- include("../partials/user/footer.ejs")%>