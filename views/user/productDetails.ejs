<script>
    // Function to show the toast notification
function showToast() {
  const toast = document.getElementById("toast");
  toast.className = "toast show";
  setTimeout(() => {
    toast.className = toast.className.replace("show", "");
  }, 3000); // The toast will disappear after 3 seconds
}

    document.addEventListener('DOMContentLoaded', function () {
        const quantityInput = document.getElementById('quantity');
        const addToCartBtn = document.getElementById('addToCartBtn');
        const platformInput = document.getElementById('platform')
        const productId = '<%= product._id %>'; 

        function updateAddToCartLink() {
            const quantity = quantityInput.value;
            const platform = platformInput.value
            const baseUrl = '/addToCart';
            addToCartBtn.href = `${baseUrl}?id=${productId}&quantity=${quantity}&platform=${platform}`;
        }

        // Update link on quantity change
        quantityInput.addEventListener('input', updateAddToCartLink);

        // Initial update
        updateAddToCartLink();
    });
    document.addEventListener('DOMContentLoaded', () => {
    const addToCartButton = document.querySelector('.template-btn');

    addToCartButton.addEventListener('click', async (event) => {
      event.preventDefault(); // Prevent default page reload
      const url = addToCartButton.getAttribute('href'); // URL for addToCart

      try {
        const response = await fetch(url);
        if (response.ok) {
          const data = await response.json();
          showToast(); // Show toast notification
          setTimeout(() => {
            window.location.href = data.redirectUrl; // Redirect after a delay
          }, 2000); // 2-second delay before redirecting
        }
      } catch (error) {
        console.error('Error adding to cart:', error);
      }
    });
  });
</script>

