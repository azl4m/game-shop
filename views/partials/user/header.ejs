    <style>
      a:hover {
        text-decoration: none; /* Prevent underline on hover */
        color: inherit; /* Prevent color change on hover */
      }
      /* Container for the entire header */

      /* Container for the entire header */
      .template-header {
        background-color: #fffdfd;
        padding: 20px 0;
        text-align: center;
      }

      /* Align logo above the navigation */
      .template-logo {
        margin-bottom: 15px;
      }

      .template-logo img {
        width: 150px; /* Adjust logo size */
        display: block;
        margin: 0 auto; /* Center logo */
      }

      /* Navigation Styling */
      nav {
        text-align: center; /* Center the navigation links */
      }

      #MenuItems {
        list-style: none;
        display: flex;
        justify-content: center; /* Center items */
        gap: 30px; /* Add space between links */
        padding: 0;
        margin: 0;
      }

      #MenuItems li {
        display: inline-block;
      }

      .template-nav-a {
        text-decoration: none;
        color: #000000;
        font-size: 16px;
        font-weight: 500;
        padding: 10px 15px;
        transition: color 0.3s ease, background-color 0.3s ease;
      }

      .template-nav-a:hover {
        background-color: black;
        color: white;
        border-radius: 10px;
      }

      /* Cart icon styling */
      .cart-icon {
        margin-top: 15px;
      }

      .cart-icon img {
        width: 30px;
        transition: transform 0.3s ease;
      }

      .cart-icon:hover img {
        transform: scale(1.1);
      }

      /* Responsive Menu Icon */
      .menu-icon {
        display: none;
      }

      @media (max-width: 768px) {
        #MenuItems {
          display: none;
          flex-direction: column;
          gap: 10px;
        }

        .menu-icon {
          display: inline-block;
        }

        .menu-icon.active + #MenuItems {
          display: flex;
        }
      }
    </style>
  </head>

  <body>
    <div class="template-header">
      <div class="container">
        <div class="template-navbar">
          <!-- Logo placed above the navigation links -->
          <div class="template-logo">
            <a href="/">
              <img src="/images/game-logo.png" alt="logo" />
            </a>
          </div>
          <!-- Navigation links centered below the logo -->
          <nav>
            <ul id="MenuItems">
              <li><a class="template-nav-a" href="/">Home</a></li>
              <li><a class="template-nav-a" href="/products">Products</a></li>
              <li><a class="template-nav-a" href="#">About</a></li>
              <li><a class="template-nav-a" href="#">Contact</a></li>
              <% if (typeof userDetails !== 'undefined') { %>
              <li class="dropdown">
                <a
                  href="#"
                  class="template-nav-a dropdown-toggle"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <%= userDetails.username %>
                </a>
                <div class="dropdown-menu">
                  <a href="/userProfile" class="dropdown-item">Profile</a>
                  <a href="/logout" class="dropdown-item">Logout</a>
                </div>
              </li>
              <% } else { %>
              <li><a class="template-nav-a" href="/login">Login</a></li>
              <li><a class="template-nav-a" href="/signup">Signup</a></li>
              <% } %>
            </ul>
          </nav>
          <!-- Cart icon -->
          <% if (typeof userDetails !== 'undefined') { %>
          <a href="/cart" class="cart-icon">
            <img src="images/cart.png" width="30px" height="30px" />
          </a>
          <% } %>
          <!-- Menu icon for mobile -->
          <img id="menuimg" src="images/menu.png" class="menu-icon" />
        </div>
      </div>
    </div>
    <script>
      const menuimg = document.getElementById("menuimg");
      window.addEventListener("DOMContentLoaded", function () {
        menuimg.addEventListener("click", function () {
          console.log("hello1");

          menutoggle();
        });
      });
      function menutoggle() {
        const menuItems = document.getElementById("MenuItems");
        if (menuItems) {
          console.log("hello2");
          menuItems.classList.toggle("active");
        } else {
          console.log("menuItems not found");
        }
      }
    </script>
  </body>
</html>
