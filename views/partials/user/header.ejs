<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RedStore | Ecommerce Website Design</title>
    <!-- style of template -->
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <!--login page link-->
    <link rel="stylesheet" type="text/css" href="/css/login.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap"
      rel="stylesheet"
    />

    <!--signup page link-->
    <link rel="stylesheet" href="/css/signup.css" />

    <!-- bootstrap links -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>

  <body>
    <div class="template-header">
      <div class="template-container">
        <div class="template-navbar">
          <div class="template-logo">
            <a href="index.html"
              ><img src="images/logo.png" alt="logo" width="125px"
            /></a>
          </div>
          <nav>
            <ul id="MenuItems">
              <li><a class="template-nav-a" href="index.html">Home</a></li>
              <li><a class="template-nav-a" href="products.html">Products</a></li>
              <li><a class="template-nav-a" href="">About</a></li>
              <li><a class="template-nav-a" href="">Contact</a></li>
              <% if(typeof userDetails !== 'undefined'){
                %>
                <li class="dropdown">
                
                <a href="" class="template-nav-a dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><%= userDetails.username %></a>
                <div class="dropdown-menu">
                  <a href="/userProfile" class="dropdown-item">Profile</a>
                  <a href="/logout" class="dropdown-item">Logout</a>
                </div>
            </li>

              <% } %>
              <% if(typeof userDetails === 'undefined'){
                %>
                <li><a class="template-nav-a" href="/login">Login</a></li>
                
              <% } %>
              <% if(typeof userDetails === 'undefined'){
                %>
                <li><a class="template-nav-a" href="/signup">Signup</a></li>
                
              <% } %>
            </ul>
          </nav>
          <% if(typeof userDetails !== 'undefined'){
            %>
            <a href="cart.html"
            ><img src="images/cart.png" width="30px" height="30px"
          /></a>
        <%  
        }%>
         
          <img src="images/menu.png" class="menu-icon" onclick="menutoggle()" />
        </div>
      </div>
    </div>
  </body>
</html>
