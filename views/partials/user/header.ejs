    <style>
     /* General Styling */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Poppins", sans-serif;
}

/* Header Container */
.main-header {
  background-color: #ffffff;
  border-bottom: 1px solid #e5e5e5;
  padding: 15px 0;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 1000;
}

.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  max-width: 1200px;
  margin: 0 auto;
}

/* Logo Styling */
.logo-container {
  display: flex;
  align-items: center;
}

.header-logo {
  width: 150px;
}

/* Navigation Menu */
.main-nav {
  display: flex;
  align-items: center;
}

.nav-links {
  display: flex;
  list-style: none;
  gap: 30px;
}

.nav-link {
  color: #000;
  text-decoration: none;
  font-size: 16px;
  font-weight: 500;
  transition: color 0.3s;
}

.nav-link:hover {
  color: #ff6347;
}

/* Dropdown Styling */
.nav-dropdown {
  position: relative;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: white;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  min-width: fit-content;
  z-index: 1001;
}

.dropdown-content a {
  padding: 10px 15px;
  display: block;
  text-decoration: none;
  color: #333;
}

.dropdown-content a:hover {
  background-color: #f1f1f1;
  text-decoration: none;
  color: #ff6347;
}

/* Mobile Menu Toggle */
.menu-toggle {
  display: none;
  font-size: 24px;
  cursor: pointer;
  color: #000;
}

/* Cart Icon */
.cart-icon {
  color: #000;
  font-size: 20px;
  text-decoration: none;
  margin: 0.4rem;
}

.cart-icon:hover {
  color: #ff6347;
}

/* Show dropdown class */
.show-dropdown {
  display: block !important;
}

/* Responsive Design */
@media (max-width: 768px) {
  .nav-links {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 70px;
    left: 0;
    background-color: white;
    width: 100%;
    text-align: center;
    padding: 20px 0;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    z-index: 1000;
  }

  .nav-links.active {
    display: flex;
  }

  .menu-toggle {
    display: block;
  }

  .nav-dropdown {
    position: static;
  }

  .dropdown-content {
    position: static;
    width: 100%;
    box-shadow: none;
    background-color: #f9f9f9;
    margin-top: 10px;
  }

  .show-dropdown {
    display: block !important;
  }

  .nav-links li {
    margin: 10px 0;
    width: 100%;
  }

  .dropdown-content a {
    padding: 10px 0;
  }
}
    </style>
